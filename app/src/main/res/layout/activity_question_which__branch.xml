<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Question_which_Branch">



    <View
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:background="#29AB87" />

    <View
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:background="#29AB87" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="110dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="264dp"
        android:layout_marginBottom="557dp"
        android:text="Branch   :"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/branch_spinner"
        android:layout_width="277dp"
        android:layout_height="46dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="109dp"
        android:layout_marginBottom="556dp"
        android:autofillHints="Enter Course"
        android:spinnerMode="dialog" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="260dp"
        android:layout_marginBottom="493dp"
        android:text="Semester  :"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="21sp"
        android:textStyle="bold" />


    <Spinner
        android:id="@+id/sem_spinner"
        android:layout_width="258dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"

        android:layout_marginStart="127dp"
        android:layout_marginBottom="486dp"
        android:spinnerMode="dialog" />

    <Button
        android:id="@+id/button"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="77dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/btn_uno"
        android:onClick="elon_2"
        android:text="PROCEED"
        android:textColor="@android:color/background_light" />

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2C2D44">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="35dp"

            android:src="@drawable/ic_arrow_back" />


    </androidx.appcompat.widget.Toolbar>
</RelativeLayout>