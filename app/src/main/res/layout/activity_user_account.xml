<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C47777"
    tools:context=".User_account">




    <ImageView
        android:id="@+id/photo"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        android:layout_marginStart="113dp"
        android:layout_marginEnd="138dp"
        android:layout_marginBottom="521dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:background="@color/colorPrimary_2" />
    <androidx.cardview.widget.CardView
        android:layout_width="327dp"
        android:layout_height="442dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="141dp"
        android:layout_marginEnd="45dp"
        android:elevation="100dp"

        android:layout_marginBottom="141dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/name"
                android:layout_width="266dp"
                android:layout_height="54dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="22dp"
                android:layout_marginBottom="311dp"
                android:text="Name : Name Here"
                android:textColor="@color/colorPrimary_3"
                android:textSize="25sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/email"
                android:layout_width="262dp"
                android:layout_height="56dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="27dp"
                android:layout_marginBottom="243dp"
                android:text="Email : Email_Here"
                android:textColor="@color/colorPrimary_3"
                android:textSize="25sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/id"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="72dp"
                android:layout_marginBottom="207dp"
                android:text="Id : Id_name"
                android:textColor="@color/colorPrimary_3"
                android:textSize="25sp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/log_out"
                android:layout_width="209dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="64dp"
                android:layout_marginBottom="21dp"
                android:background="@color/colorPrimary_2"
                android:text="Sign Out"
                android:textColor="#FFFFFF" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>




</RelativeLayout>